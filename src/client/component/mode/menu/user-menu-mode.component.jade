section.user-info
  h1.h2 #[span.fa.fa-user] User Info
  section.current-user
    h1.h3 Current User
    dl.dl-horizontal
      dt Id
      dd {{datastoreService.user && datastoreService.user.id}}
      dt Username
      dd {{datastoreService.user && datastoreService.user.username}}
      dt Email
      dd {{datastoreService.user && datastoreService.user.email}}
      dt Name
      dd {{datastoreService.user && datastoreService.user.name}}
  div(v-if="globalUsers")
    section.manage-users
      h1.h3 Manage Users
      table.table.table-bordered.table-sm
        thead.thead-inverse
          tr
            th User
            th Action
        tbody
          tr(:class="{'table-success': !datastoreService.globalUser}")
            td None
            td
              button.btn.btn-danger.btn-sm.btn-block(v-if="datastoreService.globalUser", type="button", @click="logout()") #[span.fa.fa-sign-out] Logout
          tr(v-for="globalUser in globalUsers", :class="{'table-success': datastoreService.globalUser && datastoreService.globalUser._id == globalUser._id}")
            td {{globalUser.username}} {{globalUser.sandbox ? "(Sandbox)" : ""}}
            td
              button.btn.btn-primary.btn-sm.btn-block(v-if="!datastoreService.globalUser || datastoreService.globalUser._id != globalUser._id", @click="select(globalUser)") Change
    section.add-user
      h1.h3 Add User
      button.btn.btn-primary.btn-block(@click="add(false)") Add Production User
      p: .well Login to system using the Evernote developer token. Get token from&nbsp;
        a(href='https://www.evernote.com/api/DeveloperToken.action') Evernote developer token API
        br
        | Notice: All client in this server use this token.
      button.btn.btn-primary.btn-block(@click="add(true)") Add Sandbox User
      p: .well Login to sandbox system using the Evernote sandbox developer token. Get token from&nbsp;
        a(href="https://sandbox.evernote.com/api/DeveloperToken.action") Evernote sandbox developer token API
        br
        | Notice: All client in this server use this token.
  div(v-else)
    div.loading #[i.fa.fa-spinner.fa-pulse] Loading...

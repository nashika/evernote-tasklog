script(type='text/ng-template' id='menu')
  #settings(ng-controller='MenuController')
    .page-header
      h1 #[span.fa.fa-tasks] Evernote Tasklog
    .row
      .col-md-6
        h2 #[span.fa.fa-th-large] Menu
        a.btn.btn-default.btn-lg.btn-block(href='/#/timeline') #[span.fa.fa-clock-o] Timeline
        a.btn.btn-default.btn-lg.btn-block(href='/#/notes') #[span.fa.fa-files-o] Notes
        a.btn.btn-default.btn-lg.btn-block(href='/#/settings') #[span.fa.fa-gear] Settings
      .col-md-6
        h2 #[span.fa.fa-user] User Info
        dl.dl-horizontal
          dt Id
          dd {{user.id}}
          dt Username
          dd {{user.username}}
          dt Email
          dd {{user.email}}
          dt Name
          dd {{user.name}}

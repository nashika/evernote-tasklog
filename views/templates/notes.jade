script(type='text/ng-template' id='notes')
  #settings(ng-controller='NotesController')
    table.table.table-bordered.table-striped.table-hover.table-condensed
      tr
        th Title
        th(ng-repeat='person in existPersons') {{person}}
        th Amount
      tr(ng-repeat='note in notes')
        td: a(href='evernote:///view/{{user.id}}/{{user.shardId}}/{{note.guid}}/{{note.guid}}/') {{note.title}}
        td.text-right(ng-repeat='person in existPersons')
          | {{getSpentTime(note.guid,person)}}
          br
          | {{getProfit(note.guid, person) | currency: ''}}
        td.text-right
          | {{getSpentTime(note.guid)}}
          br
          | {{noteProfits[note.guid] | currency : ''}}

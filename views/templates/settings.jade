script(type='text/ng-template' id='settings')
  #settings(ng-controller='SettingsController')
    .container
      h2 Person Settings
      form.form-horizontal
        .form-group(ng-repeat='person in editPersons')
          label.col-sm-2.control-label person-{{$index + 1}}
          .col-sm-6
            input.form-control(type='text', ng-model='person.name')
          .col-sm-4
            button.btn.btn-warning(type='button', ng-click='up($index)') Up
            button.btn.btn-warning(ng-click='down($index)') Down
            button.btn.btn-danger(ng-click='remove($index)') Remove
        button.btn.btn-success.btn-block(ng-click='add()') Add
        button.btn.btn-primary.btn-block(ng-click='submit()') Submit

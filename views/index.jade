extends layout

block script

block content
  div(ng-app='App', ng-controller='Controller', resize='resize')
    nav.navbar.navbar-inverse.navbar-fixed-bottom(ng-controller='NavigationController')
      .container-fluid
        .navbar-header
          button.navbar-toggle.collapsed(type='button', ng-click='navCollapse = !navCollapse')
            span.sr-only Toggle Navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href='/#/') #[span.fa.fa-tasks] Evernote Tasklog
        .collapse.navbar-collapse(collapse='navCollapse')
          ul.nav.navbar-nav(ng-click='navCollapse = true')
            li(ng-class='{active: $route.current.templateUrl == "timeline"}')
              a(href='#/timeline') #[span.fa.fa-clock-o] Timeline
            li(ng-class='{active: $route.current.templateUrl == "notes"}')
              a(href='#/notes') #[span.fa.fa-files-o] Notes
            li(ng-class='{active: $route.current.templateUrl == "settings"}')
              a(href='#/settings') #[span.fa.fa-gear] Settings
          form.navbar-form.navbar-right
            button.btn.btn-primary(type='button', ng-click='navCollapse = true; reload()') Reload
    div(ng-view)
    include templates/menu
    include templates/timeline
    include templates/notes
    include templates/settings
    include templates/progress-modal
